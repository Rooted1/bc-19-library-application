        <h4 class="modal-title">Book Details</h4>
      </div>
      <div class="modal-body">
        <form>
      <div class="form-group">
        <label for="bookCategory" class="control-label">Book Category</label>
        <input type="text" class="form-control" id="bookCategory">
      </div>
      <div class="form-group">
        <label for="bookTitle" class="control-label">Book Title</label>
        <input class="form-control" id="bookTitle" type="text"></input>
      </div>
      <div class="form-group">
        <label for="bookAuthor" class="control-label">Book Author</label>
        <input class="form-control" id="bookAuthor" type="text"></input>
      </div>
    </form>
      </div>
